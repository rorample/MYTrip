<h1>New Trip</h1>

<%= form_for :trip, url: trips_path do |f| %>

	<% if @trip.errors.any? %>
	    <div id="error_explanation">
	      <h3>
	        <%= pluralize(@trip.errors.count, "error") %> Prohibited This Trip From Being Saved:
	      </h3>
	      <ul>
	        <% @trip.errors.full_messages.each do |msg| %>
	          <li><%= msg %></li>
	        <% end %>
	      </ul>
	    </div>
  	<% end %>
	 
	<p>
		<%= f.label "Journey Name:" %>
		<%= f.text_field :journey_name %>
	</p>
	
	<p>
		<%= f.label "IMEI NO:" %>
		<%= f.text_field :imei_no %>
	</p>
	
	<p>
		<%= f.label "Start Latitude:" %>
		<%= f.text_field :start_latitude %>
	</p>
	
	<p>
		<%= f.label "Start Longitude:" %>
		<%= f.text_field :start_longitude %>
	</p>
	
	<p>
		<%= f.label "Remarks:" %>
		<%= f.text_field :remarks %>
	</p>
	
	
	<br/>
	
	<p>
		<%= f.submit 'Start' %>
	</p>

<% end %>

<%= link_to 'Back', trips_path %>